<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_blue"
        android:elevation="1dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/mainmenu_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="HangAnimals"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/mainmenu_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Made by Group 16"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/death" />

        <TextView
            android:id="@+id/mainmenu_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Welcome"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/mainmenu_btn_play"
                style="@style/com_facebook_button_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Play"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:layout_above="@+id/mainmenu_btn_challenge" />

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/mainmenu_btn_challenge"
                style="@style/com_facebook_button_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Multiplayer"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_above="@+id/mainmenu_btn_settings"
              />

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/mainmenu_btn_settings"
                style="@style/com_facebook_button_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Settings"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_above="@+id/mainmenu_btn_profile"
                />

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/mainmenu_btn_profile"
                style="@style/com_facebook_button_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="25dp"
                android:text="Profile"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_marginBottom="30dp"/>
        </RelativeLayout>



    </LinearLayout>

    <FrameLayout
        android:id="@+id/play_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>