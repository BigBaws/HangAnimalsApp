<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bigbaws.hanganimals.frontend.MultiplayerFragment"
    android:background="@drawable/gradient_blue"
    android:clickable="true">


    <TextView
        android:id="@+id/multiplayer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Multiplayer Games"
        android:textAlignment="center"
        android:textColor="@color/shadowColor"
        android:textSize="30sp"
        android:textStyle="normal|bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/fane"
        android:layout_height="wrap_content"
        android:layout_below="@id/multiplayer_title"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room ID"
            android:layout_weight="50"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Action"
            android:layout_weight="1"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fane"
        android:orientation="vertical">


        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/currentGameRooms" />






    </LinearLayout>

    <Button
        android:id="@+id/multiplayer_btn_begin"
        style="@style/com_facebook_button_like"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Create New room"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
